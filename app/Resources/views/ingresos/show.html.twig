{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ingresos</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingreso.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if ingreso.fecha %}{{ ingreso.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>{{ ingreso.monto }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ ingreso.descripcion }}</td>
            </tr>
            <tr>
                <th>Referencia</th>
                <td>{{ ingreso.referencia }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ingresos') }}">Regresar a la lista</a>
        </li>
        <li>
            <a href="{{ path('ingresos', { 'page': ingreso.id }) }}/edit">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
