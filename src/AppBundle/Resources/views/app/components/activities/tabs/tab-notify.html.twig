{%verbatim%}
<ul class="notification-body">
	<li ng-repeat="not in currentActivityItems">
		<span class="padding-10">

			<em class="badge padding-5 no-border-radius {{not.icon.bgcolor}} pull-left margin-right-5">
				<i class="fa {{not.icon.icon}} fa-fw fa-2x"></i>
			</em>
			
			<span>
				 <span ng-bind-html="not.message"></span>
				 <br>
				 <span class="pull-right font-xs text-muted"><i>{{not.time}}</i></span>
			</span>
			
		</span>
	</li>
</ul>
{%endverbatim%}