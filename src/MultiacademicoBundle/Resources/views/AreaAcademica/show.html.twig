{% extends 'base.html.twig' %}

{% block body %}
    <h1>AreaAcademica</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ areaAcademica.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ areaAcademica.nombre }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ areaAcademica.director }}</td>
            </tr>
            <tr>
                <th>Materias</th>
                <td>
                    {% for materia in areaAcademica.materias %}
                        {{materia}}, 
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('areaacademica') }}">Regresar a la lista</a>
        </li>
        <li>
            <a href="{{ path('areaacademica_edit', { 'page': areaAcademica.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
