{% extends 'base.html.twig' %}
{% block body -%}
<div id="content">
    <div class="row">
        <big-breadcrumbs items="['Aulas', 'Mostrar']" icon="file"
                         class="col-xs-12 col-sm-7 col-md-7 col-lg-4"></big-breadcrumbs>
            </div>
    <div class="row">

    <table class="table ">
        <tbody>
            <tr>
                <th>Curso</th>
                <td>{{ aula.curso }}</td>
             </tr>   
             <tr>   
                <th>Especializacion</th>
                <td>{{ aula.especializacion }}</td>
             </tr>   
             <tr>      
                <th>Paralelo</th>
                <td>{{ aula.paralelo }}</td>
                </tr>   
             <tr>   
                <th>Seccion</th>
                <td>{{ aula.seccion }}</td>
                </tr>   
             <tr>   
                <th>Alias</th>
                <td>{{ aula.alias }}</td>
                </tr>      
             <tr>   
                <th>Periodo</th>
                <td>{{ aula.periodo }}</td>
                </tr>   
             <tr>   
                <th>Tutor</th>
                <td>{{ aula.tutor }}</td>
                </tr>   
             
        
        </tbody>
    </table>
    </div>
        <br/>
    <div class="row text-center" >
        <ul>
        <li>
              <a class="btn btn-default"href="{{ path('aulas') }}">Regresar a la lista</a>
        </li>
        <li>
            <a class="btn btn-warning" href="{{path('aulas',{'page':([aula.curso.id,aula.especializacion.id,aula.paralelo,aula.seccion,aula.periodo.id]|join('/'))~'/edit'}) }}">Editar</a>
        </li>
         <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
          
        </li>      
        </ul>
    </div>
</div>    
{% endblock %}



