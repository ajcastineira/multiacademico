{% block content -%}
<div id="content">
    <div class="row">
        <big-breadcrumbs items="['Clubes', 'Mostrar']" icon="file"
                         class="col-xs-12 col-sm-7 col-md-7 col-lg-4"></big-breadcrumbs>
            </div>
    <div class="row">

    <table class="table record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Proyecto Escolar</th>
                <td>{{ entity.club }}</td>
            </tr>
            <tr>
                <th>Proyecto Escolar Abreviatura</th>
                <td>{{ entity.clubabreviatura }}</td>
            </tr>
            <tr>
                <th>Docente</th>
                <td>{{ entity.clubcoddocente }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ entity.clubestado }}</td>
            </tr>
            <tr>
                <th>Campo de Accion</th>
                <td>{{ entity.campoaccion }}</td>
            </tr>
            <tr>
                <th>Estudiantes Registrados</th>
                <td>
                    <table class="table">
                    <tr>    
                       <th>Estudiante</th>
                       <th>Curso</th>
                    </tr>    
                    {% for estudiante in entity.getRegistrados() %}
                        <tr>    
                        <td>{{estudiante.clubescodestudiante}}</td>
                       <td>{{estudiante.getClubescodestudiante().getMatriculaVigente().getCursoName()}}</td>
                       </tr>
                    {%endfor%}  
                    </table>
                </td>
                
            </tr>
        </tbody>
    </table>
    </div>
  
<div  class="record_actions" style="display:-webkit-box;">
            <a class="btn btn-success" href="{{ path('proyectosescolares') }}">
            Regresar a la lista
            </a>
            <a class="btn btn-primary" href="{{ path('proyectosescolares_edit', { 'id': entity.id }) }}">
                Editar
            </a>                
            {{ form_start(delete_form) }}
             {{ form_widget(delete_form.submit,{'attr':{'class':'btn-danger'} }) }}                       
            {{ form_end(delete_form) }}                
        </div>
</div>
{% endblock %}
