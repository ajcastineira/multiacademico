{% block content -%}
<div id="content">
    <div class="row">
        <big-breadcrumbs items="['Clubes', 'Mostrar']" icon="file"
                         class="col-xs-12 col-sm-7 col-md-7 col-lg-4"></big-breadcrumbs>
            </div>
    <div class="row">

    <table class="table record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Proyecto Escolar</th>
                <td>{{ entity.club }}</td>
            </tr>
            <tr>
                <th>Proyecto Escolar Abreviatura</th>
                <td>{{ entity.clubabreviatura }}</td>
            </tr>
            <tr>
                <th>Docente</th>
                <td>{{ entity.clubcoddocente }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ entity.clubestado }}</td>
            </tr>
            <tr>
                <th>Campo de Accion</th>
                <td>{{ entity.campoaccion }}</td>
            </tr>
            <tr>
                <th>Estudiantes Registrados</th>
                <td>
                    <table class="table">
                    <tr>    
                       <th>Estudiante</th>
                       <th>Curso</th>
                    </tr>    
                    {% for estudiante in entity.getRegistrados() %}
                        <tr>    
                        <td>{{estudiante.clubescodestudiante}}</td>
                       <td>{{estudiante.getClubescodestudiante().getMatriculaVigente().getCursoName()}}</td>
                       </tr>
                    {%endfor%}  
                    </table>
                </td>
                
            </tr>
        </tbody>
    </table>
    </div>
    <div class="row">
        <ul class="record_actions">
    <li>
        <a href="{{ path('proyectosescolares') }}">
            Regresar a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('proyectosescolares_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    </div>
</div>
{% endblock %}
