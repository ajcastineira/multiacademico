{% block content -%}
<div id="content">
    <div class="row">
    <div class=" col-md-12">

        <!-- Start inline form -->
        <div class="panel rounded shadow">
            <div class="panel-heading">
                <div class="pull-left">
                    <h3 class="panel-title"><i class="flaticon-signature2"></i> Materias  Resumen</h3>
                </div>
                <div class="pull-right">
                    <button data-tooltip data-collapse-panel class="btn btn-sm" data-container="body" data-action="collapse" data-toggle="tooltip" data-placement="top" data-title="Collapse"><i class="fa fa-angle-up"></i></button>
                    <button data-tooltip data-remove-panel class="btn btn-sm" data-container="body" data-action="remove" data-toggle="tooltip" data-placement="top" data-title="Remove"><i class="fa fa-times"></i></button>
                </div>
                <div class="clearfix"></div>
            </div><!-- /.panel-heading -->
            <div class="panel-body ">

    <table class="table records_list table table-primary">
        <thead>
            <tr>
                <th>Id</th>
                <th>Materia</th>
                <th>Materiatipo</th>
                <th>Materiaestado</th>
                <th>Prioridad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('materias_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.materia }}</td>
                <td>{{ entity.materiatipo }}</td>
                <td>{{ entity.materiaestado }}</td>
                <td>{{ entity.prioridad }}</td>
                <td class="text-center">
                        <a class="btn btn-primary" href="{{ path('materias_show', { 'id': entity.id }) }}">mostrar</a>
                        <a class="btn btn-warning" href="{{ path('materias_edit', { 'id': entity.id }) }}">editar</a>
                </td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
        </div>
    </div>    
    </div>
    <div class="row text-center">    
        <a class="btn btn-info" href="{{ path('materias_new') }}">
            Crear nueva entrada
        </a>
        
    </div>
    <br/>
</div>    
{% endblock %}
