{% block content -%}
<div id="content">
    <div class="row">
    <div class="col-md-push-3 col-md-6">

        <!-- Start inline form -->
        <div class="panel rounded shadow">
            <div class="panel-heading">
                <div class="pull-left">
                    <h3 class="panel-title"><i class="flaticon-canvas"></i> Mi distributivo</h3>
                </div>
                <div class="pull-right">
                    <button data-tooltip data-collapse-panel class="btn btn-sm" data-container="body" data-action="collapse" data-toggle="tooltip" data-placement="top" data-title="Collapse"><i class="fa fa-angle-up"></i></button>
                    <button data-tooltip data-remove-panel class="btn btn-sm" data-container="body" data-action="remove" data-toggle="tooltip" data-placement="top" data-title="Remove"><i class="fa fa-times"></i></button>
                </div>
                <div class="clearfix"></div>
            </div><!-- /.panel-heading -->
            <div class="panel-body no-padding">

               <table class="table records_list">
        <thead>
            <tr>
                {#<th>Codigo</th>#}
                <th>Curso</th>
                <th>Materia</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                {#<td><a href="{{ path('menu_calificar', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                <td><a href="{{ path('menu_calificar', { 'id': entity.id }) }}">{{ entity.distributivocodcurso.cursoabreviatura ~' '~ entity.distributivoparalelo ~' '~  entity.distributivocodespecializacion ~' '~ entity.distributivoseccion}}</a></td>
                <td>{{ entity.distributivocodmateria}}</td>
                <td>
                <ul>                    
                    
                    <li>
                        <a class="btn btn-primary" href="{{ path('menu_calificar', { 'id': entity.id }) }}">Seleccionar <i class="fa fa-arrow-right icon-on-right"></i></a>
                    </li>                    
                    {#<li>
                        <a href="{{ path('distributivos_edit', { 'id': entity.id }) }}">editar</a>
                    </li>#}
                </ul>
                </td>
            </tr>
        {% endfor %}
        
        {% for club in misclubes %}
            
            <td>
                <a href="{{ path('menu_proyectos_escolares', { 'id': club.id }) }}">
                    {{ club.club}}
                </a>
            </td>
                <td>{{ club.club}}</td>
                <td>
                <ul>                    
                    
                    <li>
                        
                        <a class="btn btn-primary" href="{{ path('menu_proyectos_escolares', { 'id': club.id }) }}">
                            Seleccionar <i class="fa fa-arrow-right icon-on-right"></i>
                        </a>
                    </li>                    
                </ul>
                </td>
                
        {%endfor%}    
        </tbody>
    </table>
            </div><!-- /.panel-body -->
        </div><!-- /.panel -->
        <!--/ End inline form -->
    </div>
</div><!-- /.row -->
</div>
{% endblock %}
