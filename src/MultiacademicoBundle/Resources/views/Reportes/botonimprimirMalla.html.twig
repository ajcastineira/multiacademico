               $(function() {
			$("#imprimirBoton").on("click", function() { 
    
                                var table = $(".malla-pagina"),
                                        tableWidth = $(".malla-pagina table").outerWidth(),
                                        pageWidth = 720,
                                        pageCount = Math.ceil(tableWidth / pageWidth),
                                        printWrap = $(".printable"),
                                        i,
                                        printPage;
                                var containerMalla=$(".malla-pagina .malla-container");
                                containerMalla.css({
                                                    "overflow": 'visible'
                                                   });
                                printWrap.html('');
                                for (i = 0; i < pageCount; i++) {
                                        printPage = $("<div></div>").css({
                                                "overflow": "hidden",
                                                "width": pageWidth,
                                                "page-break-before": i === 0 ? "auto" : "always"
                                        }).appendTo(printWrap);
                                        table.clone().removeClass("malla-pagina").appendTo(printPage).css({
                                                "position": "relative",
                                                "left": -i * pageWidth
                                        });
                                }
                                containerMalla.css({
                                                    "overflow": 'auto'
                                                   });
                                window.print();
                        });
                });
</script>