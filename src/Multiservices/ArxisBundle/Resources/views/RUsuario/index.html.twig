{% extends app.request.isXmlHttpRequest ? '::baseajaxforms.html.twig' : '::basesmartpanel.html.twig' %}

{% block content -%}
    <h1>User list</h1>

    <table class="table records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Username</th>
                <th>Password</th>
                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="#{{ path('secured_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.username }}</td>
                <td>******</td>
                
                <td>
                <ul>
                    <li>
                        <a href="#{{ path('secured_user_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="#{{ path('secured_user_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="#{{ path('secured_user_new') }}">
                Crear nueva entrada
            </a>
        </li>
    </ul>
    {% endblock %}
