                {#<th>Legal</th>#}
                <th>Emitido</th>
                <th>Cliente</th>
                
               
                {#<th>Estado</th>#}
                <th>Sub total</th>
                <th>Iva</th>
                <th>Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('facturas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                {#<td>{{ entity.legal }}</td>#}
                <td>{% if entity.emitido %}{{ entity.emitido|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.idcliente}}</td>
                
                
                {#<td>{{ entity.estado }}</td>#}
                
                <td>{{ entity.subtotal }}</td>
                <td>{{ entity.ivaigv }}</td>
                <td>{{ entity.total }}</td>
                <td>
                <ul>                    
                    
                    
                    
                    
                                                                                                            
                                             
                    <li>
                        <a href="{{ path('facturas_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>                    
                    
                    
                    
                    
                                                                                                            
                                             
                    <li>
                        <a href="{{ path('facturas_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <div class="row">    
        <ul>
        <li>
            <a href="{{ path('facturas_new') }}">
                Crear nueva entrada
            </a>
        </li>
    </ul>
        </div>
</div>    
