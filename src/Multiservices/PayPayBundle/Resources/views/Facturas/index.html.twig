{% block content -%}
<div id="content">
    <div class="row">
        <big-breadcrumbs items="['Facturas', 'Resumen']" icon="file"
                         class="col-xs-12 col-sm-7 col-md-7 col-lg-4"></big-breadcrumbs>
                          
        <div smart-include="{{path('layout-sub-header')}}"></div>
    </div>
    <div class="row">

    <table class="table records_list">
        <thead>
             <tr>
                 <th style="text-align:right;" colspan="15" scope="col">
                    {%verbatim%}
