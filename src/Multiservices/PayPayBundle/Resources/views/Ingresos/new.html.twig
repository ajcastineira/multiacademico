{% block content -%}
<div id="content">
    <div class="row">
        <big-breadcrumbs items="['Ingresos', 'Nuevo']" icon="file"
                         class="col-xs-12 col-sm-7 col-md-7 col-lg-4"></big-breadcrumbs>
        <div smart-include="{{path('layout-sub-header')}}"></div>
    </div>
    <div class="row">

    {{ form(form) }}
    </div>
    <div class="row">
        <ul class="record_actions">
    <li>
        <a href="{{ path('ingresos') }}">
            Regresar a la lista
        </a>
    </li>
</ul>
    </div>
</div>
<script>
var $cliente = $('#multiservices_paypaybundle_ingresos_cliente');
// When cliente gets selected ...
$cliente.change(function() {
  // ... retrieve the corresponding form.
  var $form = $(this).closest('form');
  // Simulate form data, but only include the selected sport value.
  var data = {};
  data[$cliente.attr('name')] = $cliente.val();
  // Submit data via AJAX to the form's action path.
  $.ajax({
    url : Routing.generate('ingresos_create'),
    type: $form.attr('method'),
    data : data,
    success: function(html) {
      // Replace current position field ...
      $('#multiservices_paypaybundle_ingresos_caso').replaceWith(
        // ... with the returned one from the AJAX response.
        $(html).find('#multiservices_paypaybundle_ingresos_caso')
      );
      // Position field now displays the appropriate positions.
    }
  });
});
</script>
{% endblock %}
